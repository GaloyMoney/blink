export DOCKER_HOST_IP=${DOCKER_HOST_IP:-127.0.0.1}
export NETWORK=regtest
export NODE_ENV=development

export LND1_TLS=$(cat dev/lnd/tls.cert.base64)
export LND1_TLS_KEY=$(base64 dev/lnd/tls.key | tr -d '\n\r')
export LND2_TLS=$LND1_TLS
export LNDONCHAIN_TLS=$LND1_TLS
export TLSOUTSIDE1=$LND1_TLS
export TLSOUTSIDE2=$LND1_TLS

export LND1_MACAROON=$(cat dev/lnd/$NETWORK/lnd1.admin.macaroon.base64)
export LND2_MACAROON=$(cat dev/lnd/$NETWORK/lnd2.admin.macaroon.base64)
export LNDONCHAIN_MACAROON=""
export MACAROONOUTSIDE1=$(cat dev/lnd/$NETWORK/lnd-outside-1.admin.macaroon.base64)
export MACAROONOUTSIDE2=$(cat dev/lnd/$NETWORK/lnd-outside-2.admin.macaroon.base64)

fetch_loop_macaroon() {
  local loop_num=$1
  local loop_container_id=$(docker ps -q -f status=running -f name="loopd$loop_num")
  if [ ! -z "${loop_container_id}" ]; then
    docker cp "$loop_container_id:/root/.loop/$NETWORK/loop.macaroon" "dev/lnd/loop/lnd$loop_num-loop.macaroon" 2> /dev/null
    base64 "dev/lnd/loop/lnd$loop_num-loop.macaroon" | tr -d '\n\r'
  fi
}

fetch_loop_tls() {
  local loop_num=$1
  local loop_container_id=$(docker ps -q -f status=running -f name="loopd$loop_num")
  if [ ! -z "${loop_container_id}" ]; then
    docker cp "$loop_container_id:/root/.loop/$NETWORK/tls.cert" "dev/lnd/loop/lnd$loop_num-loop-tls.cert" 2> /dev/null
    base64 "dev/lnd/loop/lnd$loop_num-loop-tls.cert" | tr -d '\n\r'
  fi
}

export LND1_LOOP_MACAROON=$(fetch_loop_macaroon 1)
export LND2_LOOP_MACAROON=$(fetch_loop_macaroon 2) 
export LND1_LOOP_TLS=$(fetch_loop_tls 1)
export LND2_LOOP_TLS=$(fetch_loop_tls 2)

