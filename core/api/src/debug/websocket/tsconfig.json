{
    "compilerOptions": {
      "module": "ESNext",
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "noImplicitAny": true,
      "useUnknownInCatchVariables": false,
      "esModuleInterop": true,
      "baseUrl": "./",
      "moduleResolution": "node",
      "resolveJsonModule": true,
    },
    "compileOnSave": true,
    "include": ["src/**/*", "test/**/*"],
    "watchOptions": {
      "synchronousWatchDirectory": true
    }
  }
  